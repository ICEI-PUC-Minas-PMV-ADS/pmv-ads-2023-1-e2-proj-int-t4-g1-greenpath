@model GreenPath.Models.VagasModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/StyleDetails.css"? />

<h1 class="titulo animation-bounce">@Html.DisplayFor(model => model.Cargo)</h1>

<div class="animation-slide-in-right">
    <div class="d-flex align-items-center gap-2">
        <i class="fa-solid fa-building"></i>
        <h4> @Html.DisplayFor(model => model.nomeEmpresa)</h4>
    </div>
</div>
<hr class="animation-slide-in-left" />
<div class="info-grid animation-scale-up">
    <div class="d-flex flex-column gap-3 animation-bounce">
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-solid fa-money-bill"></i>
            <p>Salário:</p>
            <p>R$ <span class="text-success">@Html.DisplayFor(model => model.Salario)</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-solid fa-clock"></i>
            <p>Carga horária:</p>
            <p>@Html.DisplayFor(model => model.Horas) horas semanais</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-solid fa-suitcase"></i>
            <p>Área:</p>
            <p>@Html.DisplayFor(model => model.Area)</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-regular fa-calendar-plus"></i>
            <p>Data Publicação:</p>
            <p>@Html.DisplayFor(model => model.Inicio)</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-regular fa-calendar-xmark"></i>
            <p>Disponível até:</p>
            <p>@Html.DisplayFor(model => model.Fim)</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <i class="fa-solid fa-map-location-dot"></i>
            <p>Local:</p>
            <p>@Html.DisplayFor(model => model.Local)</p>
        </div>
    </div>
</div>

@if(Model.Descricao != null){
    <div class="animation-zoom-out">
        <h4 class="animation-slide-down">Descrição</h4>
        <p class="animation-shake">@Html.DisplayFor(model => model.Descricao)</p>
    </div>
}

<form asp-action="Details">
    <input type="submit" value="Candidatar-se" class="btn btn-success btn-candidatar d-block mx-auto" />
</form>


