@model HomeModel
@{
	ViewData["Title"] = "Home Page";
}


<style>
	.z-index-1 {
		z-index: 1;
	}

	.carousel-inner {
		box-shadow: 6px 6px 11px #828282, -6px -6px 11px #ffffff;
	}

	.heroTitle {
		display: inline-block;
		position: relative;
		text-decoration: none;
		color: green;
		text-shadow: 2px 2px 2px green;
	}

	.heroTitle:hover{
		color:green;
	}

	.heroText{
		text-shadow: 2px 2px 2px black;
	}

	.lead{
		text-shadow: 0.1px 0.1px 0.1px black;
	}

	.container {
		max-width: none;
		overflow-x: hidden;
		margin: 0;
		padding: 0;
	}

	.heroImage{
		filter: blur(8px);
		-webkit-filter: blur(8px);
	}

</style>

<div class="container position-relative d-flex align-items-center justify-content-center flex-column">
	<div class="container position-absolute z-index-1">
		<div class="text-center" style="overflow: hidden">
			<h1 class="display-4 heroText" data-aos="fade-up" data-aos-duration="1000">Siga por um <a class="heroTitle" data-aos="zoom-in" data-aos-duration="1500">caminho</a> mais <a class="heroTitle" data-aos="zoom-in" data-aos-duration="1500">verde</a></h1>
		</div>

		<div class="text-center" style="margin-top: 15%">
			<p class="lead z-index-1">Contribua para um mundo melhor enquanto desenvolve sua carreira profissional</p>
			<a href="#destaques">
				<i class="fa-solid fa-chevron-down fa-bounce" style="color: #808080;"></i>
			</a>
		</div>


	</div>
	<img class="img-fluid mx-auto d-block heroImage" src="https://images.pexels.com/photos/886521/pexels-photo-886521.jpeg?auto=compress" />
</div>





<div class="row container my-5 mb-5">
	<div class="row">
		<div class="col-md-5">
			<h2 id="destaques">Destaques</h2>
			<div id="carouselDestaque" class="carousel carousel-vertical slide my-2" data-bs-ride="carousel">
				<div class="carousel-inner">

					<div class="carousel-item active">
						<div class="card">
							<img class="card-img-top" src="https://via.placeholder.com/300x200.png?text=Vaga+1" alt="Card image cap">
						</div>
					</div>

					<div class="carousel-item">
						<div class="card">
							<img class="card-img-top" src="https://via.placeholder.com/300x200.png?text=Vaga+2" alt="Card image cap">
						</div>
					</div>

					<div class="carousel-item">
						<div class="card">
							<img class="card-img-top" src="https://via.placeholder.com/300x200.png?text=Vaga+3" alt="Card image cap">
						</div>
					</div>
					<div class="carousel-item">
						<div class="card">
							<img class="card-img-top" src="https://via.placeholder.com/300x200.png?text=Vaga+4" alt="Card image cap">
						</div>
					</div>
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselDestaque" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselDestaque" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
	</div>
</div>

<div class="container p-5">
	<h1 class="display-2 text-center" data-aos="fade-right">Siga por um caminho mais <a class="center-title" href="#">Verde</a></h1>
</div>