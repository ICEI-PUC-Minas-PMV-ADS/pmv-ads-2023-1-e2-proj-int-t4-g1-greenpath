@model HomeModel
@{
	ViewData["Title"] = "GreenPath";
}

<style>
	.z-index-1 {
		z-index: 1;
	}

	.carousel-inner {
		box-shadow: 6px 6px 11px #828282, -6px -6px 11px #ffffff;
	}

	.heroTitle {
		display: inline-block;
		position: relative;
		text-decoration: none;
		color: green;
		text-shadow: 2px 2px 2px green;
	}

		.heroTitle:hover {
			color: green;
		}

	.heroText {
		text-shadow: 2px 2px 2px black;
	}

	.lead {
		text-shadow: 0.1px 0.1px 0.1px black;
	}

	.container{
		max-width: none;
		overflow-x: hidden;
		margin: 0;
		padding: 0;
	}

	.heroImage {
		filter: blur(8px);
		-webkit-filter: blur(8px);
		width: 100%;
		height: 100vh;
		margin-bottom: 5%;
	}

	.containerDestaques {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		margin-block: 5%;
	}

	#carouselDestaques {
		margin-block: 20px;
		width: 60%;
	}

	.sobre{
		max-width: 50vw;
	}
</style>

<div class="containerHero container position-relative d-flex align-items-center justify-content-center flex-column">
	<div class="container position-absolute z-index-1">

		<div class="text-center" style="overflow: hidden">
			<h1 class="display-4 heroText" data-aos="fade-up" data-aos-duration="1000">Siga por um <a class="heroTitle"
					data-aos="zoom-in" data-aos-duration="1500">caminho</a> mais <a class="heroTitle" data-aos="zoom-in"
					data-aos-duration="1500">verde</a></h1>
		</div>

		<div class="text-center" style="margin-top: 15%">
			<p class="lead z-index-1">Contribua para um mundo melhor enquanto desenvolve sua carreira profissional</p>
			<a href="#sobrenos">
				<i class="fa-solid fa-chevron-down fa-bounce" style="color: #808080;"></i>
			</a>
		</div>

	</div>

	<img class="d-block heroImage" src="https://images.pexels.com/photos/886521/pexels-photo-886521.jpeg?auto=compress" />

</div>
