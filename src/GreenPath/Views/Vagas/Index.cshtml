@model IEnumerable<GreenPath.Models.VagasModel>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center my-5">Vagas abertas</h1>

<form asp-action="Index" method="get">
    <div class="form-group d-flex justify-content-center">
        <div class="d-flex col-sm-3">
            <input type="text" class="form-control" name="BuscaString" value="@ViewData["Filtro"]"
                placeholder="Pesquise..." />
            <input type="submit" value="Busca" class="btn btn-success" />
        </div>
    </div>
</form>

<ul class="list-group list-group-light d-flex justify-content-center align-items-center">
    @foreach (var item in Model) {
    <li data-aos="fade-right" class="list-group-item d-flex justify-content-between align-items-center m-2 w-50">
        <div class="d-flex align-items-center">
            <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt="" style="width: 75px; height: 75px"
                class="rounded-circle" />
            <div class="ms-3">
                <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.Cargo)</p>
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.nomeEmpresa)</p>
                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Local)</p>
                <p class="text-muted mb-0">R$ @Html.DisplayFor(modelItem => item.Salario)</p>
            </div>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success btn-rounded btn-sm">Ver
                mais+</a>
        </div>
    </li>
    }
</ul>
