@using GreenPath.ViewModels
@model UserProfileViewModel

<style>
    .text-xxl {
        font-weight: bold;
        font-size: 30px;
    }

    .cert-card-group {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        flex-wrap: wrap;
        gap: 20px
    }

    .cert-card {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        border-radius: 20px;
        box-shadow: 0px 0px 12px #a8a8a8,
            -5px -5px 12px #ffffff;
    }

    .cert-card-text {
        font-weight: bold;
    }

    .slider {
        width: 100%;
    }

</style>



@if (Global.UserRole == "pf")
{
    <div class="profile-background p-3 ">
        @* <label class="btn btn-primary mb-3" style="top: 0;" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <i class="fa-solid fa-pen-to-square" style="bottom: 5px; right: 5px"></i>
    Editar Dados
    </label> *@
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <input style="display: none;" type="file" id="input-picture">
                        <label id="input-pic-label" for="input-picture"
                            style="cursor: pointer; position: relative; transition: 0.3s ease-out;">
                            <img src="~/images/default.png" alt="avatar" class="img-fluid"
                                style="width: 150px; aspect-ratio: 1/1; ">
                            <i class="fa-solid fa-pen-to-square position-absolute" style="bottom: 5px; right: 5px"></i>
                        </label>
                        <h5 class="my-3">@(Model.PessoaFisicaData.Nome)</h5>
                        <p class="text-muted mb-1">@Model.PessoaFisicaData.Area</p>
                        <p class="text-muted mb-4">@Model.PessoaFisicaData.Estado - @Model.PessoaFisicaData.Pais</p>
                        <div class="d-flex justify-content-center mb-2">
                        </div>
                    </div>
                </div>

                <div class="card mb-4 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-item d-flex justify-content-evenly align-items-center p-3">
                                <i class="fa-brands fa-instagram" style="color: rgb(255, 25, 0);"></i>
                                <a href="https://@Model.PessoaFisicaData.Instagram"
                                    class="mb-0 social-media-link">Instagram</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-evenly align-items-center p-3">
                                <i class="fa-brands fa-facebook " style="color: #488dff;"></i>
                                <a href="https://@Model.PessoaFisicaData.Facebook" class="mb-0 social-media-link"
                                    class="mb-0 social-media-link">Facebook</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-evenly align-items-center p-3">
                                <i class="fa-brands fa-github"></i>
                                <a href="https://@Model.PessoaFisicaData.Github" class="mb-0 social-media-link"
                                    class="mb-0 social-media-link">Github</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-evenly align-items-center p-3">
                                <i class="fa-brands fa-pinterest" style="color: #ff0202;"></i>
                                <a href="https://@Model.PessoaFisicaData.Pinterest" class="mb-0 social-media-link"
                                    class="mb-0 social-media-link">Pinterest</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Nome</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @(Model.PessoaFisicaData.Nome)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PessoaFisicaData.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Celular</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PessoaFisicaData.Telefone</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Endereço</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PessoaFisicaData.Cidade, @Model.PessoaFisicaData.Estado -
                                    @Model.PessoaFisicaData.Pais</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4"><span class="text-primary font-italic me-1">habilidades</span> Pessoais
                                </p>
                                <p class="mb-1" style="font-size: .77rem;">Comunicação</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Organização</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Liderança</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Proatividade</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4"><span class="text-primary font-italic me-1">habilidades</span> Técnicas
                                </p>
                                <p class="mb-1" style="font-size: .77rem;">Flexibilidade</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Trabalho em equipe</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Criatividade</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                                <p class="mt-4 mb-1" style="font-size: .77rem;">Agilidade</p>
                                <div class="progress rounded" style="height: 5px;">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Atualize seus dados</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-solid fa-child"></i>
                                Nome Completo:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-regular fa-envelope"></i>
                                Email:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-solid fa-phone"></i>
                                Celular:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-solid fa-location-dot"></i>
                                Endereço:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-brands fa-instagram"></i>
                                Instagram:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-brands fa-facebook"></i>
                                Facebook:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-brands fa-github"></i>
                                Github:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label pt-3">
                                <i class="fa-brands fa-pinterest"></i>
                                Pinterest:
                            </label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Atualizar</button>
                </div>
            </div>
        </div>
    </div>
}

else
{

    <div class="container mt-4">
        <div class="card">
            <div class="card-body text-center">
            </div>
            <img style="width: 200px; height: 200px;" class="img-responsive mx-auto img-thumbnail rounded-circle"
                src="https://hsnt.gr/wp-content/uploads/2020/07/company-logo-placeholder-2.jpg" alt="">
            <div class="card-body text-center pb-3">
                <h5 class="card-title text-xxl">@Html.DisplayFor(model => model.EmpresaData.Razao)</h5>

            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <hr />
                <dl>
                    <div class="d-flex gap-5 justify-content-around">

                        <div class="d-flex gap-2">
                            <dt>
                                @Html.DisplayNameFor(model => model.EmpresaData.Area):
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.EmpresaData.Area)
                            </dd>
                        </div>
                        <div class="d-flex gap-2">
                            <dt>
                                Local:
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.EmpresaData.Pais) - @Html.DisplayFor(model =>
                            model.EmpresaData.Estado), @Html.DisplayFor(model => model.EmpresaData.Cidade)
                            </dd>
                        </div>

                        <div class="d-flex gap-2">
                            <dt>
                                @Html.DisplayNameFor(model => model.EmpresaData.Cnpj):
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.EmpresaData.Cnpj)
                            </dd>
                        </div>

                    </div>

                </dl>
                <hr />
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center ">Selos</h4>
                <div class="dflex row justify-content-center">

                    <div class="cert-card-group">
                        @foreach (var item in Model.Certificates)

                        {
                            <div class="cert-card">
                                <img src=@item.logo style="width: 200px; height: 200px; scale: 0.8;" class="card-img-top" />
                                <p class="cert-card-text">@item.titulo</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center ">Vagas</h4>
                <div class="dflex row justify-content-center">

                    <img style="width: 200px; height: 200px;" class="card-img-top  mx-2"
                        src="https://via.placeholder.com/200" alt="Imagem 1">

                    <img style="width: 200px; height: 200px;" class="card-img-top  mx-2"
                        src="https://via.placeholder.com/200" alt="Imagem 2">

                    <img style="width: 200px; height: 200px;" class="card-img-top  mx-2"
                        src="https://via.placeholder.com/200" alt="Imagem 3">

                    <div class="card-body text-center pb-3">
                        <button type="button" class="btn btn-primary">Ver mais</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}