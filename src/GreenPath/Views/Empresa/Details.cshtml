@model EmpresaDetailsViewModel;

@{
    ViewData["Title"] = "Empresa";
}

<style>
    .text-xxl{
        font-weight: bold;
        font-size: 30px;
    }

    .cert-card-group{
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        flex-wrap: wrap;
        gap: 20px
    }

    .cert-card{
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        border-radius: 20px;
        box-shadow:  0px 0px 12px #a8a8a8,
                    -5px -5px 12px #ffffff;
    }

    .cert-card-text{
        font-weight: bold;
    }
    
    .vaga-card{
        border: 1px solid rgba(0,0,0,.125) !important;
         border-radius: 10px !important;
        box-shadow:  0px 0px 12px #dbdbdb,
                    -5px -5px 12px #ffffff;
    }
</style>

   
<div class="container mt-4">
    <div class="card">
        <div class="card-body text-center">
        </div>
        <img style="width: 200px; height: 200px;" class="img-responsive mx-auto img-thumbnail rounded-circle"
            src="https://hsnt.gr/wp-content/uploads/2020/07/company-logo-placeholder-2.jpg" alt="">
        <div class="card-body text-center pb-3">
            <h5 class="card-title text-xxl">@Html.DisplayFor(model => model.EmpresaData.Razao)</h5>

        </div>
    </div>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <hr />
            <dl>
                <div class="d-flex gap-5 justify-content-around">

                    <div class="d-flex gap-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.EmpresaData.Area):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EmpresaData.Area)
                        </dd>
                    </div>
                    <div class="d-flex gap-2">
                        <dt>
                            Local:
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EmpresaData.Pais) - @Html.DisplayFor(model =>
                            model.EmpresaData.Estado), @Html.DisplayFor(model => model.EmpresaData.Cidade)
                        </dd>
                    </div>

                    <div class="d-flex gap-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.EmpresaData.Cnpj):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EmpresaData.Cnpj)
                        </dd>
                    </div>

                </div>

            </dl>
            <hr />
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center ">Selos</h4>
            <div class="dflex row justify-content-center">

                <div class="cert-card-group">
                    @foreach (var item in Model.Certificates)
                    {
                    <div class="cert-card">
                        <img src=@item.logo style="width: 200px; height: 200px; scale: 0.8;" class="card-img-top" />
                        <p class="cert-card-text">@item.titulo</p>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center ">Vagas</h4>
            <div class="dflex row justify-content-center">
                <ul class=" d-flex justify-content-center align-items-center mt-5">
                    @foreach (var item in Model.Vagas) {
                    <li class="vaga-card list-group-item d-flex justify-content-between align-items-center m-2 flex-column w-25">
                        <div class="d-flex align-items-center">
                            <div class="text-center">
                                <p class="fw-bold mb-3 text-capitalize">@Html.DisplayFor(modelItem => item.Cargo)
                                </p>
                                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.nomeEmpresa)</p>
                                <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Local)</p>
                                <p class="text-muted mb-3">R$ @Html.DisplayFor(modelItem => item.Salario)</p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-outline-success btn-rounded btn-sm">Ver
                                mais+</a>
                        </div>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>