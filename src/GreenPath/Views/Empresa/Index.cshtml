@model IEnumerable<GreenPath.Models.EmpresaModel>

@{
    ViewData["Title"] = "Empresas";
}

<h1 class="text-center my-5">Empresas</h1>

<form asp-action="Index" method="get">
    <div class="form-group d-flex justify-content-center">
        <div class="d-flex col-sm-3">
            <input type="text" class="form-control" name="BuscaString" value="@ViewData["Filtro"]" placeholder="Nome, área, local..." />
            <input type="submit" value="Busca" class="btn btn-success" />
        </div>
    </div>
</form>

<ul class="list-group list-group-light d-flex justify-content-center align-items-center">
    @foreach (var item in Model) {
        <li  data-aos="fade-right" class="list-group-item d-flex justify-content-between align-items-center m-2 w-50">
            <div class="d-flex align-items-center">
                <img src="https://hsnt.gr/wp-content/uploads/2020/07/company-logo-placeholder-2.jpg" alt="" style="width: 45px; height: 45px"
                        class="rounded-circle" />
                <div class="ms-3">
                    <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.Razao)</p>
                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Area)</p>
                </div>
            </div>
            <div>
                <a asp-controller="Empresa" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success btn-rounded btn-sm">Ver mais+</a>
            </div>
        </li>
    }
</ul>
